<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Activity.Tentang">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btn_kembali_tentang"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:clickable="true"
            android:src="@drawable/ic_kembali_putih" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/Black"
            android:text="Tentang"
            android:textSize="20dp" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/Linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topbar"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_profil"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:elevation="6dp"
                    android:background="@drawable/bg_bundar2"
                    android:src="@drawable/foto_tria" />

                <TextView
                    android:id="@+id/nama_tentang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Tria Priska Reskia"
                    android:textSize="18dp" />

            </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Linear1"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardBackgroundColor="#25C0BC"
            app:cardCornerRadius="15dp"
            app:cardElevation="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/relatif_facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:clickable="true">

                    <ImageView
                        android:id="@+id/facebook_tentang"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:elevation="6dp"
                        android:src="@drawable/faceook" />

                    <TextView
                        android:id="@+id/text_facebook_tentang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/facebook_tentang"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Facebook"
                        android:textColor="@color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/realtif_instagram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:clickable="true">

                    <ImageView
                        android:id="@+id/instagram_tentang"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:elevation="6dp"
                        android:src="@drawable/instagram" />

                    <TextView
                        android:id="@+id/text_instagram"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/instagram_tentang"
                        android:text="Instagram"
                        android:textColor="@color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relatif_instagram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:clickable="true">

                    <ImageView
                        android:id="@+id/whatsapp_tentang"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:elevation="6dp"
                        android:src="@drawable/whatsapp" />

                    <TextView
                        android:id="@+id/text_whatsapp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/whatsapp_tentang"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Whatshapp"
                        android:textColor="@color/white" />
                </RelativeLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear2"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#25C0BC"
            app:cardCornerRadius="15dp"
            app:cardElevation="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/relatif_alamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp">

                    <ImageView
                        android:id="@+id/img_alamat_tentang"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_alamat" />

                    <TextView
                        android:id="@+id/alamat_tentang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_toRightOf="@+id/img_alamat_tentang"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Desa Pao Dusun Amassangan Kecamatan Malangke Kabupaten Luwu Utara Sulawesi Selatan"
                        />

                    <ImageView
                        android:id="@+id/img_telepon_tentang"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_below="@+id/img_alamat_tentang"
                        android:layout_marginTop="30dp"
                        android:src="@drawable/ic_phone" />

                    <TextView
                        android:id="@+id/telepon_tentang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/alamat_tentang"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="25dp"
                        android:layout_toRightOf="@+id/img_telepon_tentang"
                        android:fontFamily="@font/roboto_regular"
                        android:text="+6281241408797" />

                    <ImageView
                        android:id="@+id/img_email_tentang"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_below="@+id/img_telepon_tentang"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_email" />

                    <TextView
                        android:id="@+id/email_tentang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/telepon_tentang"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="25dp"
                        android:layout_toRightOf="@+id/img_email_tentang"
                        android:fontFamily="@font/roboto_regular"
                        android:text="triafriska271293@gmail.com" />

                    <ImageView
                        android:id="@+id/img_sekolah_tentang"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_below="@+id/img_email_tentang"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_school" />

                    <TextView
                        android:id="@+id/sekolah_tentang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/email_tentang"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="30dp"
                        android:layout_toRightOf="@+id/img_sekolah_tentang"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Universitas Cokroaminoto Palopo"
                        />
                </RelativeLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>