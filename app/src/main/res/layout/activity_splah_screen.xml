<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D0FFEF"
    tools:context=".Activity.Activity.SplahScreen">

    <ImageView
        android:id="@+id/opening_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_bundar"
        android:elevation="8dp"
        android:src="@drawable/logo_splash" />

    <TextView
        android:id="@+id/judul_opening"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/opening_logo"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_regular"
        android:text="Percakapan 3 Bahasa"
        android:textColor="#000"
        android:textSize="25dp" />

    <me.zhanghai.android.materialprogressbar.MaterialProgressBar
        android:id="@+id/pb_opening"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/judul_opening"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:indeterminate="true"
        app:mpb_progressStyle="horizontal"
        style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal" />

</RelativeLayout>